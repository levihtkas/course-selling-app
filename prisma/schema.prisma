generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  name String
  password String
  cart Cart[]
  purchases Purchase[]

}

model Purchase{
  id String @id @default(uuid())
  courseId String
  userId String
  User User @relation(fields: [userId],references: [id])
  Course Course @relation(fields: [courseId],references: [id])
}

model Cart {
  id String @id @default(uuid())
  userId String
  courseId String
  User User @relation(fields:[userId],references: [id])
  Course    Course   @relation(fields: [courseId], references: [id])


}

model Course {
  id String @id @default(uuid())
  title String 
  description String
  price Float
  thumbnail String
  creator String
  video Video[]
  carts Cart[]
  purchases Purchase[]
}

model Video {
  id String @id @default(uuid())
  courseId String
  title String
  url String
  Course Course @relation(fields: [courseId],references: [id])
}


